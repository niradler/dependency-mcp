{
  "name": "dependency-mcp",
  "version": "0.0.6",
  "description": "MCP server for checking package versions across multiple package managers",
  "mcpName": "io.github.niradler/dependency-mcp",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "dependency-mcp": "src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --inspect src/index.js",
    "test": "node test/test.js",
    "setup": "node setup.js"
  },
  "keywords": [
    "mcp",
    "dependency",
    "version",
    "npm",
    "pypi",
    "maven",
    "package-manager"
  ],
  "author": "Nir Adler",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "node-fetch": "^3.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src/",
    "README.md",
    "package-lock.json"
  ],
  "publishConfig": {
    "access": "public"
  }
}