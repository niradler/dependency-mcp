{
  "name": "dependency-mcp",
  "version": "0.0.8",
  "description": "MCP server for checking package versions across multiple package managers",
  "mcpName": "io.github.niradler/dependency-mcp",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "dependency-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "prebuild": "rm -rf dist",
    "start": "node dist/index.js",
    "dev": "tsx --inspect src/index.ts",
    "test": "tsx test/test.ts",
    "prepare": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "dependency",
    "version",
    "npm",
    "pypi",
    "maven",
    "package-manager",
    "typescript"
  ],
  "author": "Nir Adler",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "axios": "^1.7.9",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/"
  ],
  "publishConfig": {
    "access": "public"
  }
}
